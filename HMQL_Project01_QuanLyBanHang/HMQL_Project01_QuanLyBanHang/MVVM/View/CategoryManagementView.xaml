<UserControl x:Class="HMQL_Project01_QuanLyBanHang.MVVM.View.CategoryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HMQL_Project01_QuanLyBanHang.MVVM.View"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:viewmodel="clr-namespace:HMQL_Project01_QuanLyBanHang.MVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:CategoryManagementViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="544" d:DesignWidth="776">
    
    <Grid>
        <Border Background="#FFF1F4FA"
                CornerRadius="24"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Category Management"
                       FontSize="24" FontWeight="Bold" 
                       Margin="32 16 32 0"/>
                <Border Background="White"
                        Height="440"
                        CornerRadius="12"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        Margin="16">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="52"/>
                        </Grid.RowDefinitions>

                        <!--Search Bar & Combobox-->
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="Search:"
                                           FontSize="16"
                                           FontWeight="DemiBold"
                                           Margin="0 0 0 8"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox  Width="200" Height="32" 
                                              VerticalAlignment="Center"
                                              VerticalContentAlignment="Center">
                                        <TextBox.Style>
                                            <Style TargetType="{x:Type TextBox}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                                            <Border CornerRadius="6"
                                                            Background="Transparent"
                                                            BorderBrush="Black"
                                                            BorderThickness="1"
                                                            Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                                                <Grid>
                                                                    <Rectangle StrokeThickness="1"/>
                                                                    <TextBox Text="{Binding SearchValue, UpdateSourceTrigger=PropertyChanged}"
                                                                             FontSize="12" Margin="8 0 8 0" 
                                                                             BorderThickness="0" Background="Transparent"
                                                                             VerticalContentAlignment="Center" Foreground="Black" x:Name="InputField">
                                                                        <TextBox.InputBindings>
                                                                            <KeyBinding Key="Return" Command="{Binding CallData}"/>
                                                                        </TextBox.InputBindings>
                                                                    </TextBox>
                                                                    <!--Placeholder-->
                                                                    <TextBlock IsHitTestVisible="False" Text="Search book title"
                                                               VerticalAlignment="Center" HorizontalAlignment="Left"
                                                               Margin="10 0 8 0" FontSize="12" Foreground="DarkGray"
                                                               Grid.Column="1">
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="TextBlock">
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding Text, ElementName = InputField}" Value="">
                                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                </Grid>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <Border Height="32"
                                            Width="32"
                                            Background="#FF3A36DB"
                                            CornerRadius="6"
                                            Cursor="Hand"
                                            Margin="8 0 0 0">
                                        <Image Height="16" Width="16"
                                               Source="../../Images/OrderManagementSVG/magnifying-glass-solid.png"/>
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" Command="{Binding CallData}"/>
                                        </Border.InputBindings>
                                    </Border>
                                    <Border Height="32" Width="120"
                                            Background="#FF3A36DB"
                                            CornerRadius="6"
                                            VerticalAlignment="Center"
                                            Margin="16 0 0 0">
                                        <TextBlock Text="Add New Category"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                    <Border Height="32" Width="120"
                                            Background="#FF3A36DB"
                                            CornerRadius="6"
                                            VerticalAlignment="Center"
                                            Margin="16 0 0 0"
                                            IsEnabled="False">
                                        <TextBlock Text="Delete Category"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!--Data-->
                        <DataGrid Grid.Row="1"
                                  Background="Transparent"
                                  AutoGenerateColumns="False" CanUserAddRows="False"
                                  CanUserResizeColumns="False"
                                  CanUserReorderColumns="False"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding Data.listOfCategory}"
                                  AlternationCount="{Binding Data.listOfCategory.Count}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Index" 
                                                    Width="44"
                                                    Binding="{Binding AlternationIndex, RelativeSource={RelativeSource AncestorType=DataGridRow}}"/>
                                <DataGridTextColumn Header="Category ID"
                                                    Binding="{Binding _id}"
                                                    Width="3*"/>
                                <DataGridTextColumn Header="Category Name" 
                                                    Binding="{Binding name}"
                                                    Width="3*"/>
                                <DataGridTextColumn Header="Number Of Books" 
                                                    Binding="{Binding listOfBook.Count}"
                                                    Width="3*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!--Paging-->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <!--Row Per Page-->
                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <TextBlock Text="Rows Per Page:"
                                           FontSize="12" FontWeight="DemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0 0 8 0"/>
                                <TextBox Height="32" Width="56"
                                         FontWeight="DemiBold"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Center"
                                         Cursor="Hand">
                                    <TextBox.Style>
                                        <Style TargetType="{x:Type TextBox}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                                        <Border CornerRadius="6"
                                                            Background="Transparent"
                                                            BorderBrush="Black"
                                                            BorderThickness="1"
                                                            Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                                            <Grid>
                                                                <Rectangle StrokeThickness="1"/>
                                                                <TextBox Text="{Binding RowPerPage, UpdateSourceTrigger=PropertyChanged}"
                                                                         FontSize="12"
                                                                         BorderThickness="0" Background="Transparent"
                                                                         VerticalContentAlignment="Center"
                                                                         HorizontalContentAlignment="Center"
                                                                         Foreground="Black" x:Name="InputField">
                                                                    <TextBox.InputBindings>
                                                                        <KeyBinding Key="Return" Command="{Binding CallData}"/>
                                                                    </TextBox.InputBindings>
                                                                </TextBox>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                            <!--Paging Button-->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        Height="32"
                                        HorizontalAlignment="Center">
                                <Border Width="56"
                                    Background="#FF3A36DB"
                                    CornerRadius="4"
                                    Margin="0 0 8 0">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding PrevPageCommand}"/>
                                    </Border.InputBindings>
                                    <TextBlock Text="Prev"
                                           FontWeight="DemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                </Border>
                                <ComboBox Width="52" Margin="0 0 8 0"
                                      ItemsSource="{Binding ListPages, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedIndex="{Binding ListPagesSelectedIndex, UpdateSourceTrigger=PropertyChanged}"
                                      VerticalContentAlignment="Center"
                                      HorizontalContentAlignment="Center">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectedIndexChanged">
                                            <i:InvokeCommandAction Command="{Binding PageComboboxChangeCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                                <TextBlock FontWeight="DemiBold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left">
                                <Run Text="/"/>
                                <Run Text="{Binding TotalPage}"/>
                                </TextBlock>
                                <Border Width="56"
                                    Background="#FF3A36DB"
                                    CornerRadius="4"
                                    Margin="8 0 0 0">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding NextPageCommand}"/>
                                    </Border.InputBindings>
                                    <TextBlock Text="Next"
                                           FontWeight="DemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                            <!--Total Book Info-->
                            <TextBlock Grid.Column="2"
                                       FontSize="12" FontWeight="DemiBold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0 0 16 0">
                                <Run Text="Total Category:"/>
                                <Run Text="{Binding TotalCategory}"/>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>