        <Border Background="#FFF1F4FA"
                CornerRadius="24"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0 0 0 16">
                <TextBlock Text="Sales Report"
                       FontSize="24" FontWeight="Bold"
                       Margin="32 16 32 26"/>
